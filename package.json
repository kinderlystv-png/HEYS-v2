{
  "name": "@heys/monorepo",
  "version": "13.0.0",
  "private": true,
  "description": "HEYS - Monorepo for nutrition and training management system",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:analyze": "tsx scripts/analyze-bundle.ts",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:packages": "pnpm -r --filter=packages/* run build",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "turbo run clean && rimraf dist node_modules/.cache",
    "deploy": "node scripts/deploy.js",
    "deps:check": "pnpm audit",
    "deps:update": "pnpm update -r",
    "dev": "cross-env PORT=3001 turbo run dev",
    "dev:web": "cross-env PORT=3001 pnpm --filter='@heys/web' run dev",
    "docker:build": "docker build -t heys:latest .",
    "docker:build:dev": "docker build --target development -t heys:dev .",
    "docker:compose:dev": "docker-compose up heys-dev",
    "docker:compose:down": "docker-compose down",
    "docker:compose:up": "docker-compose up",
    "docker:run": "docker run -p 3001:3001 heys:latest",
    "docker:run:dev": "docker run -p 3001:3001 -v $(pwd):/app heys:dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "healthcheck": "node scripts/healthcheck.js",
    "legacy:serve": "npx http-server dist/production -p 3001 -c-1",
    "legacy:start": "python -m http.server 8001",
    "legacy:test": "jest",
    "lint": "turbo run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "monitoring:check": "node scripts/monitoring.js check",
    "monitoring:metrics": "node scripts/monitoring.js metrics",
    "monitoring:start": "node scripts/monitoring.js start",
    "optimize:images": "tsx scripts/optimize-images.ts",
    "prepare": "husky install",
    "release": "pnpm run build:packages && changeset publish",
    "test": "turbo run test",
    "test:all": "vitest run --coverage",
    "test:coverage": "pnpm -r run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:packages": "pnpm -r --filter='./packages/*' run test",
    "test:unit": "vitest run",
    "test:watch": "pnpm -r run test:watch",
    "type-check": "turbo run type-check",
    "workspace:graph": "pnpm list --depth=0 --json"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "dependencies": {
    "@playwright/test": "^1.37.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "express": "^4.21.2",
    "fuse.js": "^7.0.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@sentry/browser": "^10.8.0",
    "@supabase/supabase-js": "^2.56.1",
    "@swc/core": "^1.13.5",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "chalk": "^5.6.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "msw": "^2.11.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "rimraf": "^5.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sharp": "^0.34.3",
    "tsup": "^7.2.0",
    "tsx": "^4.20.5",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "$typescript"
    }
  }
}
