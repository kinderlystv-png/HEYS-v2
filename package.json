{
  "name": "@heys/monorepo",
  "version": "13.0.0",
  "private": true,
  "description": "HEYS - Monorepo for nutrition and training management system",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "// === DEVELOPMENT ===": "",
    "dev": "cross-env PORT=3001 turbo run dev --concurrency=15",
    "dev:web": "cross-env PORT=3001 pnpm --filter='@heys/web' run dev",
    "dev:copy-sw": "node scripts/copy-sw.js",
    
    "// === BUILD ===": "",
    "build": "turbo run build",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:packages": "pnpm -r --filter=packages/* run build",
    "build:analyze": "tsx scripts/analyze-bundle.ts",
    
    "// === TESTING ===": "",
    "test": "turbo run test",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:packages": "pnpm -r --filter='./packages/*' run test",
    
    "// === CI/CD ===": "",
    "ci:test": "vitest run --coverage",
    "ci:lint": "turbo run lint",
    "ci:type-check": "turbo run type-check",
    "ci:build": "turbo run build",
    
    "// === CODE QUALITY ===": "",
    "lint": "turbo run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf dist node_modules/.cache",
    
    "// === PERFORMANCE ===": "",
    "perf:analyze": "tsx scripts/analyze-bundle.ts",
    "perf:baseline": "node scripts/performance-baseline-simple.js",
    "perf:report": "npm run perf:analyze && npm run perf:baseline",
    "optimize:images": "tsx scripts/optimize-images.ts",
    
    "// === MONITORING ===": "",
    "monitoring:start": "node scripts/monitoring.js start",
    "monitoring:check": "node scripts/monitoring.js check",
    "monitoring:metrics": "node scripts/monitoring.js metrics",
    "healthcheck": "node scripts/healthcheck.js",
    
    "// === DOCKER ===": "",
    "docker:build": "docker build -t heys:latest .",
    "docker:build:dev": "docker build --target development -t heys:dev .",
    "docker:run": "docker run -p 3001:3001 heys:latest",
    "docker:run:dev": "docker run -p 3001:3001 -v $(pwd):/app heys:dev",
    "docker:compose:up": "docker-compose up",
    "docker:compose:dev": "docker-compose up heys-dev",
    "docker:compose:down": "docker-compose down",
    
    "// === RELEASES ===": "",
    "release": "pnpm run build:packages && changeset publish",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    
    "// === UTILITIES ===": "",
    "prepare": "husky install",
    "deploy": "node scripts/deploy.js",
    "deps:check": "pnpm audit",
    "deps:update": "pnpm update -r",
    "workspace:graph": "pnpm list --depth=0 --json",
    "servers:check": "node scripts/check-servers.js",
    
    "// === LEGACY (TO BE REMOVED) ===": "",
    "legacy:serve": "npx http-server dist/production -p 3001 -c-1",
    "legacy:start": "python -m http.server 8001",
    "legacy:test": "vitest",
    "test:all": "vitest run --coverage",
    "test:run": "vitest run"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "dependencies": {
    "@sveltejs/adapter-node": "^5.3.1",
    "@sveltejs/kit": "^2.37.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "express": "^4.21.2",
    "fuse.js": "^7.0.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "svelte": "^5.38.7",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.55.0",
    "@sentry/browser": "^10.8.0",
    "@supabase/supabase-js": "^2.56.1",
    "@swc/core": "^1.13.5",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.0",
    "chrome-launcher": "^1.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lighthouse": "^11.1.0",
    "lint-staged": "^15.5.2",
    "msw": "^2.11.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "puppeteer": "^24.18.0",
    "rimraf": "^5.0.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "sharp": "^0.34.3",
    "terser": "^5.44.0",
    "tsup": "^7.2.0",
    "tsx": "^4.20.5",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "web-vitals": "3.4.0"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "$typescript"
    }
  }
}
