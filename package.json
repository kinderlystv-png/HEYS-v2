{
  "name": "@heys/monorepo",
  "version": "13.0.0",
  "private": true,
  "description": "HEYS - Monorepo for nutrition and training management system",
  "license": "MIT",
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:packages": "pnpm -r --filter=packages/* run build",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:analyze": "tsx scripts/analyze-bundle.ts",
    "optimize:images": "tsx scripts/optimize-images.ts",
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter='@heys/web' run dev",
    "test": "turbo run test",
    "test:unit": "vitest run",
    "test:all": "vitest run --coverage",
    "test:watch": "pnpm -r run test:watch",
    "test:coverage": "pnpm -r run test:coverage",
    "test:packages": "pnpm -r --filter='./packages/*' run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "docker:build": "docker build -t heys:latest .",
    "docker:build:dev": "docker build --target development -t heys:dev .",
    "docker:run": "docker run -p 3000:3000 heys:latest",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/app heys:dev",
    "docker:compose:up": "docker-compose up",
    "docker:compose:dev": "docker-compose up heys-dev",
    "docker:compose:down": "docker-compose down",
    "healthcheck": "node scripts/healthcheck.js",
    "deploy": "node scripts/deploy.js",
    "monitoring:start": "node scripts/monitoring.js start",
    "monitoring:check": "node scripts/monitoring.js check",
    "monitoring:metrics": "node scripts/monitoring.js metrics",
    "lint": "turbo run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf dist node_modules/.cache",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "deps:check": "pnpm audit",
    "deps:update": "pnpm update -r",
    "workspace:graph": "pnpm list --depth=0 --json",
    "legacy:serve": "npx http-server dist/production -p 3000 -c-1",
    "legacy:start": "python -m http.server 8000",
    "legacy:test": "jest"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@supabase/supabase-js": "^2.56.1",
    "@swc/core": "^1.13.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "axe-core": "^4.10.3",
    "chalk": "^5.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "msw": "^2.11.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sharp": "^0.34.3",
    "tsup": "^7.2.0",
    "tsx": "^4.20.5",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "$typescript"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "dependencies": {
    "@playwright/test": "^1.37.0"
  }
}
