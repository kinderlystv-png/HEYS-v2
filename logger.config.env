# Конфигурация системы логирования HEYS

## Уровни логирования
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=true
LOG_PATH=./logs

## Транспорты
LOG_CONSOLE_PRETTY=true
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5
LOG_FILE_COMPRESS=true

## Безопасность
LOG_REDACT_FIELDS=password,token,secret,authorization,cookie,session,apiKey,accessToken,refreshToken

## Производительность
LOG_SAMPLING=false
LOG_SAMPLING_RATE=0.1
LOG_PERFORMANCE=true
LOG_PERFORMANCE_THRESHOLD=1000

## Сеть
LOG_NETWORK=false
LOG_NETWORK_URL=
LOG_API_KEY=

## Сервис
SERVICE_NAME=heys-platform
ENVIRONMENT=development
