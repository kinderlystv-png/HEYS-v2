{
  "name": "@heys/search",
  "version": "13.0.0",
  "description": "HEYS Search - Smart search functionality with typo tolerance",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@heys/core": "workspace:*",
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.0",
    "vitest": "^0.34.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
