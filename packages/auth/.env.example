# HEYS EAP 3.0 - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# =====================================================================
# SUPABASE CONFIGURATION
# =====================================================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Supabase Anonymous (Public) Key - Safe to expose in frontend
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key - NEVER expose in frontend!
# Only use on server-side for admin operations
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =====================================================================
# APPLICATION CONFIGURATION
# =====================================================================

# Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:4001

# =====================================================================
# AUTHENTICATION CONFIGURATION
# =====================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=1440
SESSION_REFRESH_THRESHOLD_MINUTES=60

# =====================================================================
# EMAIL CONFIGURATION (Optional - for custom emails)
# =====================================================================

# SMTP Configuration (if using custom email provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourapp.com

# Email Templates
EMAIL_TEMPLATE_WELCOME=welcome
EMAIL_TEMPLATE_RESET_PASSWORD=reset-password
EMAIL_TEMPLATE_VERIFY_EMAIL=verify-email

# =====================================================================
# SECURITY CONFIGURATION
# =====================================================================

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Security Headers
SECURITY_HEADERS_ENABLED=true

# =====================================================================
# DEVELOPMENT & DEBUGGING
# =====================================================================

# Logging Level
LOG_LEVEL=debug

# Debug Flags
DEBUG_AUTH=true
DEBUG_DB=false
DEBUG_API=false

# Mock Data (for development only)
ENABLE_MOCK_DATA=false
MOCK_USERS_COUNT=10

# =====================================================================
# ANALYTICS & MONITORING
# =====================================================================

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your_analytics_key

# Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Performance Monitoring
PERFORMANCE_MONITORING=true
