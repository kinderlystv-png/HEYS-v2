{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "composite": true,
    "rootDir": "./src",
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "src/**/__tests__/**",
    "src/performance/network-optimization-integration.ts",
    "src/performance/configs/vite-lazy-loading.config.ts",
    "src/misc/heys_error_boundary_v1.ts"
  ]
}
