{
  "name": "@heys/logger",
  "version": "1.0.0",
  "description": "Centralized logging system for HEYS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "pnpm run build:js && pnpm run build:types",
    "build:js": "tsup src/index.ts --format esm",
    "build:types": "pnpm exec tsc --project tsconfig.build.json",
    "dev": "tsup src/index.ts --format esm --watch",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "pino": "^9.9.4",
    "pino-http": "^10.5.0",
    "pino-multi-stream": "^6.0.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "tsup": "^7.3.0",
    "typescript": "^5.9.2"
  }
}
