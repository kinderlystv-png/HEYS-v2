{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@heys/core": [
        "./packages/core/src"
      ],
      "@heys/ui": [
        "./packages/ui/src"
      ],
      "@heys/search": [
        "./packages/search/src"
      ],
      "@heys/storage": [
        "./packages/storage/src"
      ],
      "@heys/gaming": [
        "./packages/gaming/src"
      ],
      "@heys/analytics": [
        "./packages/analytics/src"
      ],
      "@heys/shared": [
        "./packages/shared/src"
      ],
      "@heys/logger": [
        "./packages/logger/src"
      ]
    },
    "ignoreDeprecations": "5.0"
  },
  "references": [
    {
      "path": "./packages/logger"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/ui"
    },
    {
      "path": "./packages/search"
    },
    {
      "path": "./packages/storage"
    },
    {
      "path": "./packages/gaming"
    },
    {
      "path": "./packages/analytics"
    },
    {
      "path": "./packages/shared"
    },
    {
      "path": "./apps/web"
    }
  ],
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "tools/*/src/**/*",
    "levels.config.d.ts",
    "packages/logger/config/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "*.min.js",
    "heys_*.js",
    "heys_*.ts",
    "temp",
    "TESTS",
    "старые МЕТОДОЛОГИИ И ИНСТРУКЦИИ ДЛЯ ИИ"
  ],
  "extends": "expo/tsconfig.base"
}
