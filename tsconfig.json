{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    // Module Resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,

    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": true,
    "isolatedModules": true,

    // Interop Constraints
    "allowJs": false,
    "checkJs": false,

    // Completeness
    "skipLibCheck": true,

    // Paths for monorepo
    "baseUrl": ".",
    "paths": {
      "@heys/core": ["./packages/core/src"],
      "@heys/ui": ["./packages/ui/src"],
      "@heys/search": ["./packages/search/src"],
      "@heys/storage": ["./packages/storage/src"],
      "@heys/gaming": ["./packages/gaming/src"],
      "@heys/analytics": ["./packages/analytics/src"],
      "@heys/shared": ["./packages/shared/src"]
    }
  },

  // Workspace references
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/ui" },
    { "path": "./packages/search" },
    { "path": "./packages/storage" },
    { "path": "./packages/gaming" },
    { "path": "./packages/analytics" },
    { "path": "./packages/shared" },
    { "path": "./apps/web" }
  ],

  // Files to include/exclude
  "include": ["packages/*/src/**/*", "apps/*/src/**/*", "tools/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "*.min.js",
    // Legacy files
    "heys_*.js",
    "heys_*.ts",
    "temp",
    "TESTS",
    "старые МЕТОДОЛОГИИ И ИНСТРУКЦИИ ДЛЯ ИИ"
  ]
}
